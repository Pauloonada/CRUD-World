{
    "compilerOptions": {
        "module": "nodenext",
        "target": "es2020",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
}